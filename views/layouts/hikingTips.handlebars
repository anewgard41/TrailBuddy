<body class="min-h-full bg-green-50">
  <!-- Navigation bar -->
  <nav class="bg-gray-800">
    <!-- Navigation bar content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Navigation bar elements -->
      <div class="flex items-center justify-between h-16">
        <!-- Logo and menu for larger screens -->
        <div class="flex items-center">
          <!-- Logo -->
          <img class="mx-auto h-10 w-auto" src="/images/trailbuddy-no-text.png" alt="TrailBuddy Logo">
          <!-- Menu items for larger screens -->
          <div class="hidden md:block">
            <div class="ml-10 flex items-baseline space-x-4">
              <!-- Links to different pages -->
              <a href="/" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium" aria-current="page">Home</a>
              <a href="/hikingTips" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Hiking Tips</a>
