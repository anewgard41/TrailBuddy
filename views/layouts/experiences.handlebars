              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
    </div>
    <!-- Mobile menu (hidden) -->
    <div class="hidden md:hidden" id="resultnav">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
        <!-- Mobile navigation links -->
        <a href="/" class="bg-gray-900 text-white block px-3 py-2 rounded-md text-base font-medium" aria-current="page">Home</a>
        <a href="/hikingTips" class="text-gray-300 hover-bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Hiking Tips</a>
