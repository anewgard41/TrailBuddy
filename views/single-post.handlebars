<!-- Post Content -->
<article class="w-full max-w-2xl mx-auto break-inside p-6 rounded-xl bg-white flex flex-col bg-clip-border">
  <div class="flex pb-6 items-center justify-between">
      <div class="flex">
          <div class="flex flex-col">
          <div>
              <!-- Author Name -->
              <p class="inline-block text-lg">Posted by <span class="font-bold">{{post.username}}</span></p>
          </div>
          <div class="text-slate-500">
              <!-- Post Creation Date -->
              on {{format_date post.date_created}}
          </div>
          </div>
      </div>
  </div>
  <h2 class="text-3xl font-extrabold mb-2">
      <!-- Post Title -->
      <div class="col-8">{{post.title}}</div>
  </h2>
  <hr class="py-4">
  <p class="mb-8">
    <!-- Post Content -->
    {{post.content}}
  </p>
  <div class="mt-2 flex items-center">
      <a class="inline-flex items-center py-2 mr-3" href="#commentSection">
      <span class="mr-2">
          <!-- Comment Icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
          </svg>
      </span>
      <span class="text-base font-bold">{{post.comments.length}}</span>
      </a>
  </div>
</article>

<!-- Comment Form -->
<input type="hidden" name="post-id" value="{{post.id}}"/>
<div class="flex mx-auto items-center justify-center shadow-lg mt-12  mb-4 max-w-lg">
   <form id="new-comment-form" class="w-full max-w-xl bg-white rounded-lg px-4 pt-2">
      <div class="flex flex-wrap -mx-3 mb-6">
         <h2 class="px-4 pt-3 pb-2 text-gray-800 text-lg">Add New Comment</h2>
         <div class="w-full md:w-full px-3 mb-2 mt-2">
            <!-- Comment Textarea -->
            <textarea class="bg-gray-100 rounded border border-gray-400 leading-normal resize-none w-full h-20 py-2 px-3 font-medium placeholder-gray-700 focus:outline-none focus:bg-white" name="comment-body" id="comment-body" placeholder='Type Your Comment' required></textarea>
         </div>
         <div class="w-full md:w-full flex items-start md:w-full px-3">
            <div class="-mr-1">
               <!-- Submit Comment Button -->
               <input type='submit' class="bg-green-300 text-gray-700 font-medium py-1 px-4 border border-gray-400 rounded-lg tracking-wide mr-1 hover:bg-green-500" value='Post Comment'>
            </div>
         </div>
      </form>
   </div>
</div>

<!-- Comment Section -->
<div id="commentSection" class="media flex pb-4">
  {{> comments post.comments}}
</div>
<div class="py-8"></div>

<!-- Comment Script -->
<script src="/js/comments.js"></script>
