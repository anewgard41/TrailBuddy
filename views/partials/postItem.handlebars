<div class="mx-auto px-4 py-4 max-w-xl my-auto">
    <div class="bg-green-50 md:bg-white shadow-xl rounded-lg mb-6 ">      
      <div class="py-1">
        <div class="p-4">
          <a href="/post/{{id}}">
            <h2 class="truncate font-bold mb-2 md:mt-4 text-2xl text-gray-800 tracking-normal">{{title}}</h2>
          </a>         
          <p class="break-words text-sm text-gray-700 px-2 mr-1">{{content}}</p>
        </div>
        <div class="flex items-center justify-between p-2 md:p-4 md:mx-4">
          <div class="flex items-center">
            <div class="text-sm ml-2">
              <p class="text-black leading-none">Posted by <span class="font-bold">{{User.username}}</span></p>
              <p class="text-gray-700">on <span class="font-bold">{{format_date date_created}}</span></p> 
            </div>
          </div>
          <div class="mt-2 flex items-center">
              <a class="bg-green-500 hover:bg-green-600 text-white rounded-md px-4 py-1 inline-flex items-center py-2 mr-3" href="/post/{{id}}#commentSection">
              <span class="mr-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                  </svg>
              </span>
              <span class="text-base font-bold">{{comments.length}}</span>
              </a>
          </div>
        </div>
      </div>
    </div>
  </div>